{{>header}}

<div class="signup-form">
    <div class="title">
        <h4>Iniciar Sesión</h4>
    </div>
    <div class="signup-form-login">
        <div class="input-group mb-6">
            <form action="" method="post">
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label for="user">Nombre de Usuario</label>
                        <input type="text" class="form-control" id="username" name="Usuario" />
                    </div>
                    <div class="form-group col-md-3">
                        <label for="password">Contraseña</label>
                        <input type="text" class="form-group" id="password" name="password" required
                            placeholder="Contraseña">
                    </div>
                </div>

                <div>
                    <button type="submit" class="btn btn-primary btn-lg">Ingresar</button>
                </div>
            </form>
        </div>
    </div>


    <div class="title">
        <h4>Registrarme</h4>
    </div>
    <div class="signup-form-signup">
        <div class="input-group mb-6">
            <form action="" method="post">
                <div class="form-group col-md-13">
                    <label for="name">Nombre</label>
                    <input type="text" class="form-group" id="name" name="name" required
                        placeholder="Nombres y Apellidos">
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="document">Documento</label>
                        <input type="number" class="form-control" id="document" name="document" required
                            placeholder="Número de Documento">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="phone">Teléfono</label>
                        <input type="number" class="form-control" id="phone" name="phone" required
                            placeholder="Número de teléfono">
                    </div>
                </div>
                <div class="form-group">
                    <label for="email">Correo electrónico</label>
                    <input type="email" class="form-control" id="email" name="email" required placeholder="Correo">
                </div>
                <div>
                    <button type="submit" class="btn btn-primary btn-lg">Registrarme</button>
                </div>
            </form>
        </div>
    </div>
</div>
{{>footer}}