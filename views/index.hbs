{{>header}}
<div class="input-group mb-3">
    <div class="title">
        <h4>Registrarme</h4>
    </div>
    <form action="" method="post">
        <div class="form-group col-md-6">
            <label for="name" >Nombre</label>
            <input type="text" class="form-control" id="name" name="name" required placeholder="Nombres y Apellidos">
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="document">Documento</label>
                <input type="number" class="form-control" id="document" name="document" required
                    placeholder="Número de Documento">
            </div>
            <div class="form-group col-md-6">
                <label for="phone">Teléfono</label>
                <input type="number" class="form-control" id="phone" name="phone" required
                    placeholder="Número de teléfono">
            </div>
        </div>
        <div class="form-group col-md-6">
            <label for="email">Correo electrónico</label>
            <input type="email" class="form-control" id="email" name="email" required placeholder="Correo">
        </div>
        <div>
            <button type="submit" class="btn btn-primary btn-lg">Registrarme</button>
        </div>
    </form>
</div>
{{>footer}}